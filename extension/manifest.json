{
    "manifest_version": 3,
    "name": "ReciPic",
    "version": "1.0.0",
    "description": "Take images of your fridge and find a nice recipe to make!",
    "action": {
        "default_popup": "popup.html",
        "default_image": "banana.png"
    },
    "web_accessible_resoucres": [
        {
            "resources": ["data.json"],
            "matches": ["<all_urls>"]
        }
    ], 
    "permissions": ["scripting", "activeTab"],
    "host_permissions": [
        "https://www.walmart.com/*"
    ],
    "icons": {
        "16": "banana.png",
        "48": "banana.png",
        "128": "banana.png"
    }

    


}